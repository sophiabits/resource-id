{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "types": ["node"],
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib"
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
